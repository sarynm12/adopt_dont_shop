<h1>Create Pet</h1>

<%= form_tag "/shelters/#{@shelter_id}/pets", method: :post do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  <br>
  <br>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br>
  <br>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <br>
  <br>
  <%= label_tag :age %>
  <%= text_field_tag :age %>
  <br>
  <br>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %>
  <br>
  <br>
  <%= submit_tag 'Create Pet' %>
<% end %>
